@INPROCEEDINGS{Shimmin2010,
  author = {Shimmin, Rogan and Zeile, Oliver and Gr\"{a}{\ss}lin, Michael and
	Laufer, R\'{e}ne and R\"{o}ser, Hans-Peter},
  title = {Trajectory optimisation of a very-low-thrust lunar mission subject
	to highly non-linear thrust constraints},
  booktitle = {61st International Astronautical Congress},
  year = {2010},
  volume = {11},
  pages = {9488 - 9497},
  address = {Prague, Czech republic},
  note = {Battery capacity;Boundary constraints;Combined effect;Desaturation;Electric
	propulsion systems;Linear parameters;Mission constraints;Non-linear;Optimal
	controls;Optimisations;Perturbing forces;Reaction wheels;SPACE system;Transit
	time;},
  abstract = {This paper presents some unique aspects of trajectory optimisation
	for the all-electric satellite Lunar Mission BW1, proposed by the
	Institute for Space Systems (IRS) at the University of Stuttgart.
	Mission constraints and design compromises have imposed many severe
	non-linearities on the thrust profile. For example, reaction wheel
	desaturation and groundstation access limit the times available for
	thrusting, while limited battery capacity constrains the thrust duration
	before an idle period for recharging is needed. Furthermore, the
	long transit time resulting from using an electric propulsion system
	magnifies the effects of small perturbing forces acting on the spacecraft
	which are usually neglected in other trajectory studies. To overcome
	these difficulties a non-linear programming approach was utilised,
	exploiting state-of-the-art optimal control software developed by
	Boeing. The flight dynamics, cost function, path and boundary constraints
	were carefully modelled such that they appear as linear parameters
	to the optimisation interface, allowing the independent and combined
	effects of each constraint to be investigated. Preliminary results
	of this optimisation are presented, with a discussion of sensitivity
	analysis to ensure robustness in the event of subsystem failure or
	off-nominal conditions.},
  copyright = {Compilation and indexing terms, Copyright 2011 Elsevier Inc.},
  key = {Lunar missions},
  keywords = {Electric propulsion;Flight dynamics;Flight paths;Optimization;Sensitivity
	analysis;Spacecraft propulsion;},
  language = {English},
  owner = {shimmin},
  timestamp = {2011.08.24}
}

@INPROCEEDINGS{Trawny2004,
  author = {Trawny, Nikolas and Gr\"{a}{\ss}lin, Michael and Laufer, R\'{e}ne
