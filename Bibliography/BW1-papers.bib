@INPROCEEDINGS{Uryu2008,
  author = {Uryu, Alexander and van der Ha, Jozef C. and R\"{o}ser, Hans-Peter
	and Kuwahara, Toshinori},
  title = {QSAT mission analysis and operation plan design},
