@INPROCEEDINGS{Falke2004,
  author = {Falke, Albert and Hartling, Manfred and Laufer, Rene and R\"{o}ser,
	Hans-Peter},
  title = {Implementation of a simulation environment for software hardware
	simulation of power management for a lunar small satellite mission},
  booktitle = {55th International Astronautical Congress},
  year = {2004},
  volume = {6},
  pages = {3651--3661},
  address = {Vancouver, Canada},
  organization = {International Astronautical Federation},
  note = {Earth-Moon transfer;Iterative hardware;Power management;Satellite
	subsystems;},
  abstract = {The University of Stuttgart plans an all electrical small satellite
	lunar mission. The usage of an electric propulsion system for the
	Earth-Moon transfer results in high and non-transient power demands
	while power input is dependent of the spacecraft orientation due
	to fixed mounted solar panels. A typical methodology designing a
	power supply system for a small satellite is to identify power management
	options and alternatives based on characteristic configurationally
	parameters. On one hand low battery capacities result in volume and
	mass savings but on the other hand in operation limitations like
	a specific sequence of successive operations and its duration. The
	engineering challenge of small satellite power supply system design
	is to optimize the trade-off between hardware limitations (volume
	and mass) and mission power requirements to fulfill the technical
	and scientific mission objectives. Therefore a power management software
	simulator is used to visualize effects on power management for different
	designs of power supply system and other satellite subsystems. By
	iterative hardware oriented optimization an adequate power supply
	system design was found.},
  copyright = {Compilation and indexing terms, Copyright 2009 Elsevier Inc.},
  key = {Lunar missions},
  keywords = {Astronomical satellites;Computer simulation;Computer software;Electric
	power systems;Electric propulsion;Spacecraft;},
  language = {English}
}

