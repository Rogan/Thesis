@INPROCEEDINGS{Wagner2003,
  author = {Wagner, H.P. and Auweter-Kurtz, M.},
  title = {Low-thrust electric propulsion for small satellite lunar exploration},
  booktitle = {54th International Astronautical Congress},
  year = {2003},
  volume = {3},
  pages = {403--412},
  address = {Bremen, Germany},
  organization = {International Astronautical Federation},
  note = {Institute of Space Systems (IRS);Low-thrust electric propulsion;Magnetoplasmadynamic
	(MPD);Pulsed plasma thrusters (PPT);},
  abstract = {In a new line of research at the Institute of Space Systems (IRS),
	short-pulsed coaxial plasma accelerators for space propulsion are
	being developed and experimentally investigated. Pulsed plasma thrusters
	(PPT) are of particular interest for space exploration and exploitation
	since they essentially combine the advantage of continuously operated
	high-power magnetoplasmadynamic thrusters with low average electric
	power consumption and manageable heat generation. This available-power
	capacity and their ability of generating high specific impulses makes
	them especially well suited for planetary missions using small satellites.
	Hence at IRS, a program has been initiated to build and launch its
	own series of self-propelled micro-satellites for technology development
	as well as planetary scientific exploration. For a projected Moon
	mission, the spacecraft starting from a typical 200&times;35800 km
	GTO will use its onboard PPT-based propulsion system to fly towards
	and insert itself into a 100 km altitude polar orbit around the Moon.
	Low-thrust PPTs are required to be continuously operated throughout
	the whole transfer and, thus, discrete-impulse trajectory concepts,
	known from lunar spacecrafts with high-thrust chemical engines, can
	no longer be used for propulsion system design. Moreover, there exists
	a region between Earth and Moon where their respective gravitational
	attractions are approximately of equal magnitude and where the spacecraft
	trajectory is expected to be very sensitive to small perturbations
	and may even become chaotic. The propulsion system for such a mission
	has to be conceived by taking into account these points which appear
	to be particularly important for low-thrust trajectories. The first
	results of these investigations indicating that such a lunar exploration
	mission is technically feasible with the help of a cluster of four
	PPTs and one low-power arcjet will be presented and discussed. Copyright
	&copy; 2003 by the International Astronautical Federation. All rights
	reserved.},
  copyright = {Compilation and indexing terms, Copyright 2009 Elsevier Inc.},
  key = {Electric propulsion},
  keywords = {Chaos theory;Electric power utilization;Electronic equipment;Magnetoplasma;Optimization;Polytetrafluoroethylenes;Reliability;Satellites;},
  language = {English}
}

@ARTICLE{Wagner2004,
  author = {Wagner, Jorg F. and Kasties, Gunther},
  title = {Applying the principle of integrated navigation systems to estimating
